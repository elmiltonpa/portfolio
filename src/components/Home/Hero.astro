---
import Button from "../ui/Button.astro";
---

<section
    class="relative min-h-screen flex items-center justify-center overflow-hidden bg-transparent"
>
    <!-- Degradado de fondo con transparencia para dejar ver el patrón global -->
    <!-- <div
        class="absolute inset-0 bg-linear-to-b from-background/50 via-background/80 to-card/50"
    >
    </div> -->

    <!-- Cuadrícula decorativa propia del Hero -->
    <!-- <div
        class="absolute inset-0 opacity-[0.03]"
        style={{
            backgroundImage: `linear-gradient(hsl(var(--primary)) 1px, transparent 1px),
                               linear-gradient(90deg, hsl(var(--primary)) 1px, transparent 1px)`,
            backgroundSize: "60px 60px",
        }}
    >
    </div> -->

    <!-- Brillo central -->
    <div
        class="absolute top-1/4 left-1/2 -translate-x-1/2 w-150 h-150 bg-primary/5 rounded-full blur-[100px]"
    >
    </div>

    <div class="relative z-10 section-container text-center">
        <div class="max-w-4xl mx-auto">
            <p
                class="font-mono text-primary text-sm md:text-base mb-4 opacity-0 animate-fade-up stagger-1"
            >
                Hola, mi nombre es
            </p>
            <h1
                class="text-4xl sm:text-5xl md:text-7xl font-bold mb-4 opacity-0 animate-fade-up stagger-2"
            >
                <span class="text-foreground">Milton Ibarra</span>
            </h1>
            <h2
                class="text-3xl sm:text-4xl md:text-5xl font-bold text-muted-foreground mb-8 opacity-0 animate-fade-up stagger-3"
            >
                Backend developer
            </h2>
            <p
                class="text-muted-foreground text-lg md:text-xl max-w-2xl mx-auto mb-12 leading-relaxed opacity-0 animate-fade-up stagger-4"
            >
                Desarrollo sistemas robustos y escalables. Especializado en
                arquitectura de software, APIs y soluciones backend de alto
                rendimiento.
            </p>
            <div
                class="flex flex-col sm:flex-row gap-4 justify-center opacity-0 animate-fade-up stagger-5"
            >
                <Button
                    href="https://github.com"
                    target="_blank"
                    rel="noopener noreferrer"
                    variant="outline"
                    size="lg"
                    icon="lucide:github"
                    class="group border-primary text-primary hover:bg-primary hover:text-primary-foreground glow-hover font-mono"
                >
                    GitHub
                </Button>

                <Button
                    href="#projects"
                    variant="default"
                    size="lg"
                    icon="lucide:folder-open"
                    class="bg-primary text-primary-foreground hover:bg-primary/90 glow-primary font-mono"
                >
                    Ver Proyectos
                </Button>
            </div>
        </div>
    </div>
</section>
