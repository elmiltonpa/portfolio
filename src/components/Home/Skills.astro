---
import { Icon } from "astro-icon/components";

const skills = [
    {
        category: "Languages",
        icon: "lucide:code-2",
        items: [
            { name: "C#", icon: "simple-icons:csharp" },
            { name: "CSS", icon: "simple-icons:css3" },
            { name: "HTML5", icon: "simple-icons:html5" },
            { name: "JavaScript", icon: "simple-icons:javascript" },
            { name: "TypeScript", icon: "simple-icons:typescript" },
        ],
    },
    {
        category: "Frameworks & Libraries",
        icon: "lucide:blocks",
        items: [
            { name: "Bun", icon: "simple-icons:bun" },
            { name: "Astro", icon: "simple-icons:astro" },
            { name: ".NET", icon: "simple-icons:dotnet" },
            { name: "Express.js", icon: "lucide:code" },
            { name: "JWT", icon: "lucide:lock" },
            { name: "Next.js", icon: "simple-icons:nextdotjs" },
            { name: "React", icon: "simple-icons:react" },
            { name: "Tailwind CSS", icon: "simple-icons:tailwindcss" },
            { name: "Vite", icon: "simple-icons:vite" },
        ],
    },
    {
        category: "Databases",
        icon: "lucide:database",
        items: [
            { name: "PostgreSQL", icon: "simple-icons:postgresql" },
            { name: "Redis", icon: "simple-icons:redis" },
            { name: "MongoDB", icon: "simple-icons:mongodb" },
            { name: "SQL", icon: "lucide:database" },
            { name: "ORMs", icon: "lucide:settings" },
            { name: "Database Design", icon: "lucide:layers" },
        ],
    },
    {
        category: "DevOps & Tools",
        icon: "lucide:cloud",
        items: [
            { name: "Docker", icon: "simple-icons:docker" },
            { name: "Git", icon: "simple-icons:git" },
            { name: "Postman", icon: "simple-icons:postman" },
        ],
    },
    {
        category: "Computer Science",
        icon: "lucide:brain",
        items: [
            { name: "Data Structures", icon: "lucide:list" },
            { name: "Algorithms", icon: "lucide:cpu" },
            { name: "Design Patterns", icon: "lucide:box" },
            { name: "Agile Methodologies", icon: "lucide:users" },
            { name: "System Design", icon: "lucide:workflow" },
            { name: "Testing", icon: "lucide:check-circle" },
        ],
    },
];
---

<section id="skills" class="relative bg-transparent overflow-hidden">
    <div
        class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full max-w-7xl pointer-events-none"
    >
        <div
            class="absolute top-1/3 -right-20 w-72 h-72 bg-primary/5 rounded-full blur-[100px]"
        >
        </div>
        <div
            class="absolute bottom-1/3 -left-20 w-72 h-72 bg-accent/5 rounded-full blur-[100px]"
        >
        </div>
    </div>

    <div class="section-container relative z-10">
        <h2 class="section-title text-foreground">Habilidades</h2>

        <div
            class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto"
        >
            {
                skills.map((group, i) => (
                    <div
                        class={`skill-card group relative bg-card/50 backdrop-blur-sm border border-border rounded-xl p-6
                        hover:border-primary/50 transition-all duration-300 animate-fade-up stagger-${i + 1}`}
                    >
                        <div class="absolute inset-0 rounded-xl bg-linear-to-br from-primary/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none" />

                        <div class="relative z-10">
                            <div class="flex items-center gap-3 mb-5">
                                <div class="p-2 rounded-lg bg-primary/10 text-primary group-hover:bg-primary/20 transition-colors">
                                    <Icon name={group.icon} class="size-5" />
                                </div>
                                <h3 class="text-sm text-foreground tracking-wide uppercase font-mono font-semibold">
                                    {group.category}
                                </h3>
                            </div>

                            <div class="flex flex-wrap gap-2">
                                {group.items.map((item) => (
                                    <div
                                        class="skill-item flex items-center gap-2 px-3 py-2 bg-secondary/50 rounded-lg
                                        border border-transparent hover:border-primary/30 hover:bg-secondary
                                        transition-all duration-200 cursor-default group/item"
                                    >
                                        <Icon
                                            name={item.icon}
                                            class="size-4 text-muted-foreground group-hover/item:text-primary transition-colors"
                                        />
                                        <span class="text-sm text-secondary-foreground group-hover/item:text-foreground transition-colors font-mono">
                                            {item.name}
                                        </span>
                                    </div>
                                ))}
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .skill-card {
        transform: translateY(0);
    }

    .skill-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 40px -20px rgba(128, 90, 213, 0.15);
    }
</style>
