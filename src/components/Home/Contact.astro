    // Lógica para procesar el formulario
}
---

<section id="contact" class="bg-card">
    <div class="section-container">
        <div class="grid lg:grid-cols-4 gap-12 items-start">
            <div class="lg:col-span-1 space-y-6">
                <h2 class="section-title text-foreground">Contacto</h2>

                <div class="w-16 h-1 bg-primary rounded-full"></div>

                <p class="text-muted-foreground leading-relaxed max-w-md">
                    ¿Tienes un proyecto en mente o una oportunidad interesante?
                    Me encantaría escucharte.
                </p>

                <p class="text-sm text-muted-foreground/70 font-mono">
                    elmiltonibarra@gmail.com
                </p>
            </div>

            <div class="lg:col-span-3">
                <form
                    method="POST"
                    class="bg-background/70 backdrop-blur border border-border/60 shadow-xl rounded-2xl p-10 space-y-6"
                >
                    <div class="grid sm:grid-cols-2 gap-5">
                        <input
                            type="text"
                            id="name"
                            name="name"
                            placeholder="Nombre"
                            required
                            class="w-full px-4 py-4 rounded-xl border border-border bg-card
                        text-foreground placeholder:text-muted-foreground/50
                        focus:border-primary focus:ring-2 focus:ring-primary/20
                        hover:border-primary/40
                        outline-none transition-all"
                        />

                        <input
                            type="email"
                            id="email"
                            name="email"
                            placeholder="Email"
                            required
                            class="w-full px-4 py-4 rounded-xl border border-border bg-card
                        text-foreground placeholder:text-muted-foreground/50
                        focus:border-primary focus:ring-2 focus:ring-primary/20
                        hover:border-primary/40
                        outline-none transition-all"
                        />
                    </div>

                    <input
                        type="text"
                        id="subject"
                        name="subject"
                        placeholder="Asunto"
                        required
                        class="w-full px-4 py-4 rounded-xl border border-border bg-card
                    text-foreground placeholder:text-muted-foreground/50
                    focus:border-primary focus:ring-2 focus:ring-primary/20
                    hover:border-primary/40
                    outline-none transition-all"
                    />

                    <textarea
                        id="message"
                        name="message"
                        rows="5"
                        placeholder="Tu mensaje..."
                        required
                        class="w-full px-4 py-4 rounded-xl border border-border bg-card
                    text-foreground placeholder:text-muted-foreground/50
                    focus:border-primary focus:ring-2 focus:ring-primary/20
                    hover:border-primary/40
                    outline-none transition-all resize-none"
                    ></textarea>

                    <div class="flex justify-end">
                        <Button
                            type="submit"
                            size="lg"
                            icon="lucide:send"
                            class="font-mono px-10"
                        >
                            Enviar mensaje
                        </Button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
