---
import Header from "../sections/Header.astro";
import Footer from "../sections/Footer.astro";
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Milton Ibarra</title>
        <meta name="description" content="Portfolio of Milton Ibarra, systems engineering student specializing in backend development, full-stack applications, and efficient software solutions." />
        <script is:inline>
            const theme = localStorage.getItem("theme") || "gold";
            document.documentElement.setAttribute("data-theme", theme);
        </script>
        <ClientRouter />
    </head>
    <body id="top" class="min-h-screen flex flex-col">
        <Header />
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>

<style>
    html,
    body {
        width: 100%;
        min-height: 100%;
    }
</style>
